<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:HOI4NavalModder"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="HOI4NavalModder.EquipmentDesignView">
    <Grid RowDefinitions="Auto,*" x:Name="ContentGrid">
        <!-- ヘッダーパネル -->
        <Panel Grid.Row="0" Background="#2D2D30" Height="40">
            <TextBlock Text="装備設計"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"
                       FontSize="16"
                       />
        </Panel>
        
        <!-- コンテンツエリア -->
        <Grid Grid.Row="1" ColumnDefinitions="250,*">
            <!-- 左側：フィルタパネル -->
            <Border Grid.Column="0" Background="#252526" BorderThickness="0,0,1,0" BorderBrush="#3F3F46">
                <StackPanel Margin="10">
                    <TextBlock Text="フィルタ" Foreground="White" FontWeight="Bold" Margin="0,0,0,10" />
                    
                    <!-- フィルタ内容は省略 -->
                </StackPanel>
            </Border>
            
            <!-- 右側：メインコンテンツエリア -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*">
                <!-- ツールバー -->
                <Panel Grid.Row="0" Background="#333337" Height="40">
                    <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                        <Button x:Name="NewEquipmentButton" 
                                Content="新規"
                                Padding="10,5,10,5"
                                Margin="0,0,5,0"
                                Background="#3E3E42"
                                Foreground="White"
                                BorderThickness="0"
                                Click="OnNewEquipmentClick"
                                />
                                
                        <Button x:Name="EditEquipmentButton" 
                                Content="編集"
                                Padding="10,5,10,5"
                                Margin="0,0,5,0"
                                Background="#3E3E42"
                                Foreground="White"
                                BorderThickness="0"
                                Click="OnEditEquipmentClick"
                                />                              
                        <Button x:Name="DeleteEquipmentButton" 
                                Content="削除"
                                Padding="10,5,10,5"
                                Margin="0,0,5,0"
                                Background="#3E3E42"
                                Foreground="White"
                                BorderThickness="0"
                                Click="OnDeleteEquipmentClick"
                                />
                                
                        <Button x:Name="DuplicateEquipmentButton" 
                                Content="複製"
                                Padding="10,5,10,5"
                                Margin="0,0,5,0"
                                Background="#3E3E42"
                                Foreground="White"
                                BorderThickness="0"
                                Click="OnDuplicateEquipmentClick"
                                />
                                
                        <Button x:Name="ExportButton" 
                                Content="エクスポート"
                                Padding="10,5,10,5"
                                Margin="0,0,5,0"
                                Background="#3E3E42"
                                Foreground="White"
                                BorderThickness="0"
                                Click="OnExportClick"
                                />
                                
                        <Button x:Name="ImportButton" 
                                Content="インポート"
                                Padding="10,5,10,5"
                                Margin="0,0,5,0"
                                Background="#3E3E42"
                                Foreground="White"
                                BorderThickness="0"
                                Click="OnImportClick"
                                />
                    </StackPanel>
                </Panel>
                
                <!-- 装備リスト (ListBoxをXAMLで定義) -->
                <Grid Grid.Row="1">
                    <ListBox x:Name="EquipmentListBox"
                             Background="#1E1E1E"
                             BorderThickness="0"
                             Foreground="White"
                             Margin="5">
                    </ListBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>