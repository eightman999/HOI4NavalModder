<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HOI4NavalModder.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.Resources>
        <FontFamily
            x:Key="03SmartFontUI">avares://HOI4NavalModder/Assets/Fonts/03SmartFontUI.ttf#03SmartFontUI</FontFamily>
        <FontFamily
            x:Key="Kai">avares://HOI4NavalModder/Assets/Fonts/Kai.ttf#Kai</FontFamily>
    </Application.Resources>
    <Application.Styles>
        <FluentTheme />
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource 03SmartFontUI}" />
        </Style>
        <Style Selector="TextBox">
            <Setter Property="FontFamily"  Value="{StaticResource 03SmartFontUI}" />
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="FontFamily"  Value="{StaticResource 03SmartFontUI}" />
        </Style>
        <Style Selector="Button">
            <Setter Property="FontFamily"  Value="{StaticResource 03SmartFontUI}" />
        </Style>
    </Application.Styles>

</Application>